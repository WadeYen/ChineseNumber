
public class ReverseNumber {
	
	 public static void main(String[] args) {
	        String test = "12345";
	        
	        System.out.println(reverse(test)); // 54321

	    }
	    
	    public static String reverse(String str) {
	        
	        String rev= "";
	        // TODO: 幫我填上內容，如何反轉一個字串
	    	for (int i = str.length()-1; i >= 0; i--) {
				rev += str.charAt(i);
				
			}
	    	
	    	
	    	
	        
	        return rev; // 這裡可以自由改
	    }
	    

}
